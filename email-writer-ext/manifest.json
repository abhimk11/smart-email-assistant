{
    "name": "Email Writer Assistant",
    "description": "AI-powered email reply generator that helps you write professional and personalized email responses quickly.",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "http://localhost:8080/*",
        "*://mail.google.com/*"
    ],
    "icons": {
        "16": "icon.png"
    },
    "content_scripts": [
        {
            "js": ["content.js"],
            "matches": ["*://mail.google.com/*"],
            "css": ["content.css"],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["icons/*"],
            "matches": ["*://mail.google.com/*"]
        }
    ],
    "action": {
        "default_title": "Email Writer Assistant"
    }
}